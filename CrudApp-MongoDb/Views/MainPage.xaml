    <ScrollView>
        <StackLayout BackgroundColor="GhostWhite">
            <Frame Margin="50" BorderColor="Transparent">
                <VerticalStackLayout Spacing="10">
                    <Image Source="dotnet_bot" HeightRequest="150"/>
                    <HorizontalStackLayout Spacing="20">
                        <Label Text="Name" Margin="0,10" />
                        <Entry Text="Busra"/>
                    </HorizontalStackLayout>
                    <BoxView HeightRequest="1" Color="Gray" VerticalOptions="End" WidthRequest="{Binding Source={x:Reference entryName}, Path=Width}" />
                    <HorizontalStackLayout Spacing="20">
                        <Label Text="TC" Margin="0,10" />
                        <Entry Text="1000000000"/>
                        
                    </HorizontalStackLayout>
                    <BoxView HeightRequest="1" Color="Gray" VerticalOptions="End" WidthRequest="{Binding Source={x:Reference entryName}, Path=Width}" />

                    <HorizontalStackLayout Spacing="20">
                        <Label Text="Tel" Margin="0,10"/>
                        <Entry Text="0500 000 00 00"/>
                    </HorizontalStackLayout>
                    <BoxView HeightRequest="1" Color="Gray" VerticalOptions="End"/>

                    <HorizontalStackLayout Spacing="20" HorizontalOptions="FillAndExpand">
                        <Label Text="Mail" Margin="0,10" HorizontalOptions="StartAndExpand"/>
                        <Entry Text="by@gmail.com" HorizontalOptions="EndAndExpand"/>
                    </HorizontalStackLayout>
                    <BoxView HeightRequest="1" Color="Gray" VerticalOptions="End"/>


                    <HorizontalStackLayout Spacing="20">
                        <Label Text="Birth Day" Margin="0,10" />
                        <DatePicker/>
                    </HorizontalStackLayout>
                    <BoxView HeightRequest="1" Color="Gray" VerticalOptions="End"/>

                    <HorizontalStackLayout Margin="0,20" HorizontalOptions="Center"> 
                        <Button Text="GÜNCELLE" BackgroundColor="Green" Margin="5,0" BorderColor="Transparent"/>
                        <Button Text="SİL" BackgroundColor="Red"   BorderColor="Transparent"/>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>
        </StackLayout>
    </ScrollView> 
    
    
</ContentPage>